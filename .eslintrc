{
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "jest",
    "jsdoc"
  ],
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "window": true,
    "document": true
  },
  "env": {
    "jest/globals": true
  },
  "rules": {
    "react/jsx-filename-extension": false,
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/label-has-for": [ 2, {
      "allowChildren": true
    }],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all"
    }]
  }
}
